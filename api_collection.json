{
  "info": {
    "name": "Article Management API",
    "description": "Collection for testing the Article Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"editor@example.com\",\n  \"password\": \"testpass123\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Editor\",\n  \"role\": \"EDITOR\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/register/",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "register", ""]
            }
          }
        },
        {
          "name": "Obtain Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"editor@example.com\",\n  \"password\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/token/",
              "host": ["{{base_url}}"],
              "path": ["api", "token", ""]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"YOUR_REFRESH_TOKEN\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/token/refresh/",
              "host": ["{{base_url}}"],
              "path": ["api", "token", "refresh", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Articles",
      "item": [
        {
          "name": "List Articles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/articles/",
              "host": ["{{base_url}}"],
              "path": ["api", "articles", ""]
            }
          }
        },
        {
          "name": "List Articles - Filter by Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/articles/?status=published",
              "host": ["{{base_url}}"],
              "path": ["api", "articles", ""],
              "query": [
                {
                  "key": "status",
                  "value": "published"
                }
              ]
            }
          }
        },
        {
          "name": "Create Article",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Article\",\n  \"content\": \"This is the content of my first article.\",\n  \"status\": \"draft\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/articles/",
              "host": ["{{base_url}}"],
              "path": ["api", "articles", ""]
            }
          }
        },
        {
          "name": "Get Article Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/articles/1/",
              "host": ["{{base_url}}"],
              "path": ["api", "articles", "1", ""]
            }
          }
        },
        {
          "name": "Update Article",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Article Title\",\n  \"content\": \"Updated content.\",\n  \"status\": \"published\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/articles/1/",
              "host": ["{{base_url}}"],
              "path": ["api", "articles", "1", ""]
            }
          }
        },
        {
          "name": "Delete Article",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/articles/1/",
              "host": ["{{base_url}}"],
              "path": ["api", "articles", "1", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/me/",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me", ""]
            }
          }
        },
        {
          "name": "List All Users (Admin Only)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/",
              "host": ["{{base_url}}"],
              "path": ["api", "users", ""]
            }
          }
        }
      ]
    }
  ]
}
